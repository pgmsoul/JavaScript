{  
	"name": "JuTranslate",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "Ju 翻译工具",
	"content_scripts": [
		{
			"matches":["<all_urls>"],
			"js": [
				"fanyi.js"
			]
		}
	],
	"permissions": [
		"http://fanyi.youdao.com/",
		"http://jsuse.sinaapp.com/",
		"tabs"
	],
	"browser_action": {
		"default_icon": {
			"19": "app19.png",
			"38": "app38.png"
		},
		"default_title": "Ju 翻译工具",
		"default_popup": "popup.html"
	},
	"icons": {
		"128": "logo.png"
	}
}